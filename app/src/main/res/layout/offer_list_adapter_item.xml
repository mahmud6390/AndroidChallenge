<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    >
    <ImageView
        android:id="@+id/image_view_thumb"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        />
    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_view_thumb"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/text_view_payout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_title"
        android:layout_toRightOf="@+id/image_view_thumb"
        />
    <TextView
        android:id="@+id/text_view_teaser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_payout"
        android:layout_toRightOf="@+id/image_view_thumb"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/text_view_teaser"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/image_view_thumb"
        android:background="@android:color/darker_gray" />

</RelativeLayout>